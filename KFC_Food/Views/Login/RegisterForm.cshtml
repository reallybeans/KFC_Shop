
@{
    ViewData["Title"] = "RegisterForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .form {
            margin-top: 100px;
            text-align: center;
            border-style: outset;
            border-radius: 30px;
            border-width:5px;
        }

        .form h1{
            margin-top:20px;
           
        }
        #los {
            margin-top:15px;
            width: 500px;
            margin-left: 300px;
        }
        #button {
            margin-bottom: 20px;
            border-radius: 5px;
            width: 100px;
            margin-left: -15px;
            margin-right: 260px;
        }
        p{
            color:red;
        }
    </style>
</head>
<div class="form">
    @using (Html.BeginForm("Register", "Login"))
    {<h1>Register Form</h1>


        <div id="los" class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">UserName:</span>
            </div>
            <input type="text" required="" name="userName" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div id="los" class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Name:</span>
            </div>
            <input type="text" required="" name="name" class="form-control" placeholder="Name" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div id="los" class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Password:</span>
            </div>
            <input type="password" required="" id="password" name="password" class="form-control" placeholder="Password" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div id="los" class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Confirm Password:</span>
            </div>
            <input type="password" id="conf" required="" name="confirm" class="form-control" placeholder="Confirm Password" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <p>@ViewData["Message"]</p>
        <input id="button" class="btn btn-info" type="submit" value="Register" onsubmit=" return check();" />
        <a href="/ShoppingCart/Login">I have an account     </a>

    }
</div>


