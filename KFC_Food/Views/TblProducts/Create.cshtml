@model KFC_Food.Models.TblProduct

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TblProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input required="" asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"  class="control-label"></label>
                <input asp-for="Price" type="number" min="1" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"  class="control-label"></label>
                <input asp-for="Quantity" type="number" min="1" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgSrc" class="control-label"></label>
                <input onchange="myFunction();" id="imgValue" asp-for="ImgSrc" class="form-control" />
                <span asp-validation-for="ImgSrc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
    <div id="myImg" style="padding:2em 12em;height:400px; display:none;" class="col-md-8">
        <img id="img" src="" style="width:100%; height:100%" />
    </div>
    </div>
<script>
    function myFunction() {
        var x = document.getElementById('imgValue').value; 
        document.getElementById("myImg").style.display = "block";
        document.getElementById("img").src = x;
         
    }
</script>
   

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
