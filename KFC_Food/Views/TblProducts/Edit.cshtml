@model KFC_Food.Models.TblProduct

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TblProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" min="1" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"  class="control-label"></label>
                <input asp-for="Quantity" type="number" min="1" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgSrc" class="control-label"></label>
                <input onchange="myFunction()" id="imgVa" asp-for="ImgSrc" class="form-control" />
                <span asp-validation-for="ImgSrc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a type="button" class="btn btn-light" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
    <div id="myImg" style="padding:2em 12em;height:400px; " class="col-md-8">
        <img id="img" src="" style="width:100%; height:100%" />
    </div>

</div>

<script>
    document.getElementById("img").src = document.getElementById('imgVa').value;
    function myFunction() {
        var x = document.getElementById('imgVa').value;
        document.getElementById("myImg").style.display = "block";
        document.getElementById("img").src = x;

    }
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
