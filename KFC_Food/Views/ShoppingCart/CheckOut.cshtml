
@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .form {
            margin-top: 100px;
            text-align: center;
            border-style: outset;
            border-radius: 30px;
            border-width: 5px;
        }
            .form h1 {
                margin-top: 20px;
            }
        #los {
            margin-top: 15px;
            width: 500px;
            margin-left: 300px;
        }
        #button {
            margin-bottom: 20px;
            border-radius: 5px;
            width: 100px;
            margin-left: -15px;
            margin-right: 260px;
        }
        .form a{
            margin-bottom:25px;
            
        }
    </style>
</head>
<div class="form">
    <h1>Thank you for purcharse</h1>
    <div id="los" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">OrderID:</span>
        </div>
        <input type="text" readonly="" class="form-control" value="@ViewData["OrderID"]" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div id="los" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Customer:</span>
        </div>
        <input type="text" readonly="" class="form-control" value="@ViewData["Name"]" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div id="los" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Address:</span>
        </div>
        <input type="text" readonly="" class="form-control" value="@ViewData["Address"]" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div id="los" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Phone:</span>
        </div>
        <input type="text" readonly="" class="form-control" value="@ViewData["Phone"]" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div id="los" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Payment type:</span>
        </div>
        <input type="text" readonly="" class="form-control" value="@ViewData["Payment_Type"]" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div id="los" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Total amount:</span>
        </div>
        <input type="text" readonly="" class="form-control" value="@ViewData["Total_Price"]VND" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div id="los" class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Check out time:</span>
        </div>
        <input type="text" readonly="" class="form-control" value="@ViewData["Time"]" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Index","Home")">Continue Shopping</a>
</div>

